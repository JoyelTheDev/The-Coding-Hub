#!/bin/bash
# ===========================================================
# CODING HUB — Auto Random Theme Banner (1s Refresh)
# Mode By - Nobita
# ===========================================================

NC='\033[0m'
BOLD='\033[1m'

# ===================== THEMES =====================
THEMES=(RED BLUE PURPLE GOLD CYBER)

apply_theme(){
case "$1" in
RED)
  C_MAIN='\033[1;31m'
  C_LINE='\033[38;5;160m'
;;
BLUE)
  C_MAIN='\033[1;34m'
  C_LINE='\033[38;5;39m'
;;
PURPLE)
  C_MAIN='\033[1;35m'
  C_LINE='\033[38;5;141m'
;;
GOLD)
  C_MAIN='\033[38;5;220m'
  C_LINE='\033[38;5;178m'
;;
CYBER)
  C_MAIN='\033[38;5;51m'
  C_LINE='\033[38;5;87m'
;;
esac
}

random_theme(){
  THEME="${THEMES[$RANDOM % ${#THEMES[@]}]}"
  apply_theme "$THEME"
}

# ===================== BANNER =====================
banner(){
clear
random_theme

echo -e "${C_LINE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo
echo -e "${C_MAIN} ██████╗ ██████╗ ██████╗ ██╗███╗   ██╗ ██████╗     ██╗  ██╗██╗   ██╗██████╗ ${NC}"
echo -e "${C_MAIN}██╔════╝██╔═══██╗██╔══██╗██║████╗  ██║██╔════╝     ██║  ██║██║   ██║██╔══██╗${NC}"
echo -e "${C_MAIN}██║     ██║   ██║██║  ██║██║██╔██╗ ██║██║  ███╗    ███████║██║   ██║██████╔╝${NC}"
echo -e "${C_MAIN}██║     ██║   ██║██║  ██║██║██║╚██╗██║██║   ██║    ██╔══██║██║   ██║██╔══██╗${NC}"
echo -e "${C_MAIN}╚██████╗╚██████╔╝██████╔╝██║██║ ╚████║╚██████╔╝    ██║  ██║╚██████╔╝██████╔╝${NC}"
echo -e "${C_MAIN} ╚═════╝ ╚═════╝ ╚═════╝ ╚═╝╚═╝  ╚═══╝ ╚═════╝     ╚═╝  ╚═╝ ╚═════╝ ╚═════╝ ${NC}"
echo
echo -e "${C_LINE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "                 ${BOLD}${C_MAIN}Mode By - Nobita${NC}"
echo -e "${C_LINE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
}

# ===================== LOOP =====================
while true; do
  banner
  sleep 1
done
